@model SharpnessControlWebApp.Models.SharpnessViewModels
@{
    ViewBag.Title = "Schärfe-Kontrolle. Einstellungen.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Einstellungen</strong>
            </div>
            <div class="card-body">

                <div id="pay-invoice">
                    <div class="card-body">
                        <div class="card-title">

                        </div>
                        <hr>
                        <form action="" method="post" enctype="multipart/form-data">





                            <div class="row form-group">

                                <div class="col-12 col-md-12">
                                    @Html.DropDownListFor(model => model.Stain.Name, (IEnumerable<SelectListItem>)ViewBag.Stains, "Färbung", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-12 col-md-12">
                                    @Html.DropDownListFor(model => model.Organ.Name, (IEnumerable<SelectListItem>)ViewBag.Organs, "Organ", new { @class = "form-control" })
                                </div>
                            </div>


                            <div class="row form-group">
                                <div class="col-12 col-md-12">
                                    @Html.DropDownListFor(model => model.Tissue.Name, (IEnumerable<SelectListItem>)ViewBag.Tissues, "Gewebeart", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.TextBoxFor(m => m.WSI.Titel, new { @class = "form-control", @placeholder = "Titel", @type = "text" })

                            </div>
                            <div class="form-group">

                                @Html.TextAreaFor(m => m.WSI.Description, new { @class = "form-control", @placeholder = "Beschreibung", @type = "text" })

                            </div>




                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label">WSI laden</label></div>
                                <div class="col-12 col-md-12"><input type="file" name="file" id="file" class="form-control-file"></div>
                            </div>


                            <input type="submit" value="Schärfe-Test durchführen" class="btn btn-primary btn-sm">



                        </form>
                    </div>
                </div>
            </div>
        </div> <!-- .card -->
    </div><!--/.col-->
