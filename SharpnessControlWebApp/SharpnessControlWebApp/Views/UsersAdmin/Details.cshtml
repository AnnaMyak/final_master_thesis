@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}
<div class="form-horizontal">
    @Html.ActionLink("Zurück zu den Benutzern", "Index", null, new { @class = "btn btn-warning", @style = "color:white" }) | @Html.ActionLink("Zurück zu den Entitäten", "Index", "Management", null, new { @class = "btn btn-danger", @style = "background-color:#884dff" })
</div>
<br />
<h4>Details</h4>
<br />

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"><strong>Benutzer</strong></h5>
        <p class="card-text"> <strong>@Html.DisplayNameFor(model => model.UserName): </strong>@Html.DisplayFor(model => model.UserName)</p>
        <p><strong>Role:</strong></p>
        @if (ViewBag.RoleNames.Count == 0)
        {
            <hr />
            <p>Dem Benutzer wurden keine Rollen vergeben.</p>
        }
        @if (ViewBag.RoleNames.Count > 0)
        {
            foreach (var item in ViewBag.RoleNames)
            {
                <br />
                @item
            }
        }
    </div>
    @Html.ActionLink("Rolle vergeben / Email ändern", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning", @style = "color:white" })
</div>







