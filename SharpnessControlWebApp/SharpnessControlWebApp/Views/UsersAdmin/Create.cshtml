@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Einen neuen Benutzer hinzufügen";
}

<br />

@Html.ActionLink("Zurück zu den Benutzern", "Index", null, new { @class = "btn btn-warning", @style = "color:white" }) | @Html.ActionLink("Zurück zu den Entitäten", "Index", "Management", null, new { @class = "btn btn-danger", @style = "background-color:#884dff" }) 
<br />
<br />
@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Einen neuen Benutzer hinzufügen </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control", @placeholder = "Email bestätigen" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Salutation, new { @class = "form-control", @placeholder = "Anrede" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AcademicTitle, new { @class = "form-control", @placeholder = "Akademischer Grad" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", @placeholder = "Vorname" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", @placeholder = "Nachname" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Organisation, new { @class = "form-control", @placeholder = "Gesundheitseinrichtung" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @placeholder = "Postleitzahl" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Adresse" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @placeholder = "Ort" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Country, new { @class = "form-control",@placeholder="Land"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder="Passwort" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control",@placeholder="Passwort bestätigen" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">
            Role vergeben 
        </label>
        <div class="col-md-10">
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Den Benutzer erzeugen" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
