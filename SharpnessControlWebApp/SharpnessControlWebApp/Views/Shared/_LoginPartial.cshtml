@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav ml-auto" }))
    {
        @Html.AntiForgeryToken()



        <ul class="navbar-nav ml-auto" >

            <li class="nav-item">
                <a class="nav-link">
                    <i class="fa fa-user-circle" href=""> </i> @User.Identity.GetUserName()
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="fa fa-fw fa-sign-in"></i> Abmelden
                </a>
            </li>


        </ul>

    }
}
else
{


    <ul class="navbar-nav ml-auto">

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Register", "Account")">
                <i class="fa fa-fw fa fa-edit"></i>Registrieren
            </a>
        </li>


        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account")">
                <i class="fa fa-fw fa-sign-in"></i>Anmelden
            </a>
        </li>

        


    </ul>



}

